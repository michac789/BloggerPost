<form action="/profile/<%= curr_user.username %>" method="POST">

    <div class="field">
        <label class="label" for="email">Email: </label>
        <input class="input" type="text" name="email" id="email"
            value="<%= curr_user.email %>">
    </div>

    <div class="field">
        <label class="label" for="age">Age: </label>
        <input class="input" type="number" name="age" id="age"
            value="<%= curr_user.age %>">
    </div>

    <div class="field">
        <label class="label">Gender: </label>
        <div class="control">
            <label for="male" class="radio">
                <input type="radio" name="gender" value="male" id="male">
                Male
            </label>
            <label for="female" class="radio">
                <input type="radio" name="gender" value="female" id="female">
                Female
            </label>
        </div>
    </div>
    
    <div class="field">
        <label class="label" for="status">Status: </label>
        <input class="input" type="text" name="status" id="status"
            value="<%= curr_user.status %>">
    </div>

    <div class="field">
        <label for="description" class="label">Description: </label>
        <textarea class="textarea" name="description" id="description"
        cols="30" rows="10" placeholder="Enter your blog description here..."
        ><%= curr_user.description %></textarea>
    </div>

    <button type="submit">Submit</button>
</form>

<a href="/">Back to main menu</a><br>
